@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Home";
}

@using System.Web.Optimization
@model eUseControl.Web.Models.UserData

@{
    ViewBag.Title = "Homepage";
}
<!DOCTYPE html>
<html>
<head>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
</head>
<body>
    <div class="homepage-wrapper">
        <h2>Latest news</h2>
        @for (int i = 0; i < Model.TextList.Count; i++)
        {
            <div class="news-wrapper">
                <div class="card mb-3" style="max-width: 540px;">
                    <div class="row no-gutters">
                        <div class="col-md-4">
                            <img src="@Model.ImageList[i]" class="card-img" alt="...">
                        </div>
                        <div class="col-md-8">
                            <div class="card-body">
                                <h5 class="card-title">@Model.TitleList[i]</h5>
                                <p class="card-text">@Model.TextList[i]</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</body>
</html>


