@using System.Web.Optimization

<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>eUse System | @ViewBag.Title</title>

    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700,900" rel="stylesheet" type="text/css">
    @Styles.Render("~/bundles/font-awesome/css")
    @Styles.Render("~/bundles/animate/css")
    @Styles.Render("~/bundles/bootstrap/css")
    @Styles.Render("~/bundles/peicon7stroke/css")
    @Styles.Render("~/bundles/peicon7stroke/css/helper")
    @Styles.Render("~/bundles/peicon7stroke/css/style")

    <!-- Add local styles, mostly for plugins css file -->
    @if (IsSectionDefined("Styles"))
    {@RenderSection("Styles", required: false)}

    <!-- Primary HOME style -->
    @Styles.Render("~/bundles/main/css")
</head>

<body>
    <!-- Header -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        @Html.Partial("_Header")
    </nav>
    <div class="container body-content">
        @RenderBody()
    </div>
    <footer class="footer-wrapper">
        @Html.Partial("_Footer")
    </footer>

    <!-- Section for main scripts render -->
    @Scripts.Render("~/bundles/pace/js")
    @Scripts.Render("~/bundles/jquery/js")
    @Scripts.Render("~/bundles/bootstrap/js")
    <!-- Handler for local scripts -->
    @RenderSection("scripts", required: false)
</body>
</html>
<script src="https://kit.fontawesome.com/ce8d884e76.js" crossorigin="anonymous"></script>