
@{
    ViewBag.Title = "AdminPanel";
}

<div class="admin-form">
    <form>
        <div class="form-group row">
            <label for="post-title" class="col-sm-4 col-form-label">Post Title</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="post-title">
            </div>
        </div>
        <div class="form-group row">
            <label for="textarea" class="col-sm-5 col-form-label">Post Information</label>
            <div class="col-sm-10">
                <textarea class="form-control" id="textarea"></textarea>
            </div>
        </div>
        <div class="form-group row">
            <div class="button-wrapper">
                <label for="file-upload" class="custom-file-upload btn btn-primary">
                    <i class="fa fa-cloud-upload"></i> Custom Upload
                </label>
                <input id="file-upload" type="file" />
            </div>
        </div>

        <div class="form-group row">
            <div class="col-sm-10">
                <div class="button-wrapper">
                    <button type="submit" class="btn btn-primary">Create Post</button>
                </div>
            </div>
        </div>
    </form>
</div>
<script src="https://kit.fontawesome.com/ce8d884e76.js" crossorigin="anonymous"></script>


