@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout_Blank.cshtml";
}

@using System.Web.Optimization
@model eUseControl.Web.Models.UserLogin


<div class="login-form">
    <div class="panel-body">
        @Html.ValidationSummary(true)
        @using (Html.BeginForm("Index", "Login", FormMethod.Post, new { @id = "LoginForm" }))
        {
            @Html.AntiForgeryToken()
            <div class="form-group">
                @Html.LabelFor(m => m.Username, new { @class = "control-label" })
                @Html.TextBoxFor(m => m.Username, new
           {
               placeholder = "example@gmail.com",
               title = "Please enter you username",
               value = "",
               name = "username",
               id = "username",
               @class = "form-control"
           })
                <span class="help-block small">Your unique username to app</span>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Password, new { @class = "control-label" })
                @Html.TextBoxFor(m => m.Password, new
           {
               @class = "form-control",
               type = "password",
               title = "Please enter your password",
               placeholder = "******",
               value = "",
               name = "password",
               id = "password"
           })
                <span class="help-block small">Your strong password</span>
            </div>
            <div class="button-wrapper">
                <button class="btn btn-primary" value="submit" type="submit">Login</button>
                <a class="btn btn-primary" href="@Url.Action("Index","Register")">Register</a>
            </div>
        }
    </div>
</div>



@section Scripts {
    @Scripts.Render("~/bundles/validation/js")
    @Scripts.Render("~/bundles/jquery/js")

    <script type="text/javascript">
        $(function () {

            $("#LoginForm").validate({
                rules: {
                    Username: {
                        required: true
                    },
                    Password: {
                        required: true
                    }
                },
                submitHandler: function (form) {
                    form.submit();
                },
                errorPlacement: function (error, element) {
                    $(element)
                        .closest("form")
                        .find("label[for='" + element.attr("id") + "']")
                        .append(error);
                },
                errorElement: "span"
            });
        });


    </script>
}
